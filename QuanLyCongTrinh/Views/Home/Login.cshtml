@model QuanLyCongTrinh.Models.TaiKhoan

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
    <link href="~/assets/css/global.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Quản lý - Đăng nhập</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="height: 100vh">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-md-4" style="width: 350px">
            <div class="card py-4 px-3">
                <div class="d-flex justify-content-center mb-4">
                    <img alt="logo" src="~/assets/Image/wordpress.svg" width="100" />
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group mb-4">
                                @Html.EditorFor(model => model.TenTaiKhoan, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên tài khoản", @style = "border: none; outline: none; border-bottom: 1px solid #000" } })
                                @Html.ValidationMessageFor(model => model.TenTaiKhoan, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group mb-3">
                                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập mật khẩu", @style = "border: none; outline: none; border-bottom: 1px solid #000" } })
                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group mb-3">
                                @Html.CheckBox("rememberMe")
                                <label for="rememberMe">Nhớ mật khẩu</label>
                            </div>
                            <div class="form-group d-flex justify-content-between">
                                <span style="font-size: 16px">Bạn quên mật khẩu ?</span>
                                @Html.ActionLink("Quên mật khẩu", "ForgetPassword", "Home", new { @style = "font-size: 16px; text-decoration: underline!important" })
                            </div>
                            @if (@ViewBag.errLogin != null)
                            {
                                <span class="text-danger">@ViewBag.errLogin</span>
                            }
                        </div>
                        <input type="submit" value="Đăng nhập" class="btn btn-success w-100" />
                    }
                </div>
            </div>
        </div>


    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/assets/js/main.js"></script>
</body>
</html>
