@model IEnumerable<QuanLyCongTrinh.Models.TaiKhoan>

@{
    ViewBag.Url = "Tài khoản";
    ViewBag.Title = "Tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenTaiKhoan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MatKhau)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenNguoiDung)
        </th>
        <th>
            Quyền
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenTaiKhoan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MatKhau)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenNguoiDung)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quyen.TenQuyen)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaTaiKhoan }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaTaiKhoan }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaTaiKhoan })
        </td>
    </tr>
}

</table>
